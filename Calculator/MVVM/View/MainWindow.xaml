                     Foreground="White"
                     FontSize="45"
                     VerticalContentAlignment="Center"
                     Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}"
                     Padding="20,0,15,0"
                     IsReadOnly="True"/>

